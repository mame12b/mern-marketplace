# ============================================
# CLIENT URL (for CORS)
# ============================================
CLIENT_URL=http://localhost:3000

# ============================================
# EMAIL CONFIGURATION (SendGrid)
# ============================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@marketplace.com
EMAIL_FROM_NAME=Marketplace Platform

# ============================================
# CLOUDINARY CONFIGURATION (Image Upload)
# ============================================
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# STRIPE CONFIGURATION (Payment Gateway)
# ============================================
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# ============================================
# PAYPAL CONFIGURATION (Alternative Payment)
# ============================================
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ============================================
# AWS S3 CONFIGURATION (Alternative to Cloudinary)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=marketplace-uploads

# ============================================
# TWILIO CONFIGURATION (SMS Notifications)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# GOOGLE CONFIGURATION (Social Login)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# ============================================
# FACEBOOK CONFIGURATION (Social Login)
# ============================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/v1/auth/facebook/callback

# ============================================
# REDIS CONFIGURATION (Caching & Sessions)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=admin@marketplace.com
ADMIN_PASSWORD=Admin@123456
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# ============================================
# APPLICATION SETTINGS
# ============================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Pagination defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Tax and shipping
DEFAULT_TAX_RATE=0.05
FREE_SHIPPING_THRESHOLD=50

# ============================================
# SENTRY CONFIGURATION (Error Tracking)
# ============================================
SENTRY_DSN=your-sentry-dsn-here

# ============================================
# GOOGLE ANALYTICS
# ============================================
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================
# SOCKET.IO CONFIGURATION
# ============================================
SOCKET_PORT=5001

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ============================================
# FRONTEND URLs (for emails and redirects)
# ============================================
FRONTEND_URL=http://localhost:3000
MOBILE_APP_SCHEME=marketplace://

# Email verification and password reset URLs
EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email
PASSWORD_RESET_URL=http://localhost:3000/reset-password

# ============================================
# MISCELLANEOUS
# ============================================
# Timezone
TZ=UTC

# Session secret
SESSION_SECRET=your-session-secret-key-here

# Cookie settings
COOKIE_EXPIRE=7